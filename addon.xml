<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.audiothekBrowser"
    name="Audiothek Browser"
    version="1.3.1"
    provider-name="CodingPF">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.ckfw" version="1.0.1"/>
    </requires>
    <extension
        point="xbmc.python.pluginsource"
        library="addon.py">
        <provides>audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="de_DE">Audiothek Browser</summary>
        <summary lang="en_GB">Audiothek Browser</summary>
        <description lang="de_DE">Ein Kodi Plugin um die ARD Audiothek in Kodi zu durchsuchen</description>
        <description lang="en_GB">Browse the ARD Audiothek using Kodi</description>
        <news>
v1.3.0
[feature] Kodi21 release and move to framework
v.1.2.5
[feature] new build script adjustments
v.1.2.4
[fix] icon issue for organization
[feature] add elements gt 0 filter on request
[fix] sort order for folders 
v.1.2.3
fix NPT
v.1.2.2
fix playItem function
		</news>
        <platform>all</platform>
        <language>de en</language>
        <license>MIT</license>
        <source>https://github.com/codingPF/plugin.audio.audiothekBrowser</source>
        <email>j-doo@gmx.de</email>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/screenshot1.png</screenshot>
            <screenshot>resources/screenshot2.png</screenshot>
            <screenshot>resources/screenshot3.png</screenshot>
        </assets>
    </extension>
</addon>
